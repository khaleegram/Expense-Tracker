rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Balance: Only allows access to the 'current' document.
    match /balance/current {
      allow read, write: if request.auth != null;
    }

    // Expenses: Logged-in users can create, read, update, and delete expenses.
    match /expenses/{expenseId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Items: Logged-in users can read and create new items.
    match /items/{itemId} {
      allow read, create: if request.auth != null;
    }

    // Roster: Logged-in users can read and update the 'current' roster.
    match /roster/current {
       allow read, write: if request.auth != null;
    }
  }
}
