rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to expenses
    match /expenses/{expenseId} {
      allow read, write: if true;
    }

    // Allow public read/write access to items
    match /items/{itemId} {
      allow read, write: if true;
    }

    // Allow public read/write access to the balance
    match /balance/{balanceId} {
      allow read, write: if true;
    }
  }
}